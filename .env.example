# Django 환경설정 파일 예시
# 실제 배포시에는 .env로 복사하여 사용하세요

# Django 기본 설정
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=False
DEFAULT_PORT=8080
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# 데이터베이스 설정 (PostgreSQL)
DB_NAME=kdpii_labeler_db
DB_USER=kdpii_user
DB_PASSWORD=your-secure-password
DB_HOST=localhost
DB_PORT=5432

# CORS 설정
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8080,https://your-domain.com

# 정적 파일 설정
STATIC_URL=/static/
STATIC_ROOT=/var/www/kdpii_labeler/static/

# 미디어 파일 설정  
MEDIA_URL=/media/
MEDIA_ROOT=/var/www/kdpii_labeler/media/

# 로깅 레벨
LOG_LEVEL=INFO

# 시간대 설정
TIME_ZONE=Asia/Seoul

# 언어 설정
LANGUAGE_CODE=ko-kr

# Django 관리자 계정 설정
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@yourdomain.com
DJANGO_SUPERUSER_PASSWORD=your-secure-admin-password

# Docker 개발 환경용 설정 (개발시에만 사용)
# DEBUG=True
# SECRET_KEY=django-insecure-dev-key-only-for-development
# DB_PASSWORD=dev-password-123